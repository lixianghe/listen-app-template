/* components/log/log.wxss */
.log-mini {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 10vh;
  height: 10vh;
  z-index: 9999999999999;
}
.log {
  position: absolute;
  top: 0;
  right: 0;
  width: 100vh;
  max-width: 100vw;
  height: 100vh;
  background: rgba(255, 255, 255, 1);
  z-index: 9999999999999;
  transition: top 0.5;
  padding: 10vh;
  overflow: hidden;
}
.max-btn,
.min-btn,
.close-btn {
  position: absolute;
  top: 0;
  font-size: 20rpx;
  z-index: 9;
}
.max-btn,
.min-btn {
  left: 0;
}
.close-btn {
  right: 2vh;
}

.clear-btn {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 22vh !important;
  height: 8vh;
  padding: 0;
  margin: 0;
}

.log-scroll-view {
  width: 100%;
  height: 100%;
  font-size: 10rpx;
  word-break: break-all;
}

/* log */
.showlog {
  position: fixed;
  right: 0;
  bottom: 0;
  width: 30px;
  height: 30px;
  z-index: 100000;
  background-color: rgba(255, 0, 0, 0);
}
